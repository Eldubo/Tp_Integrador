<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Perfil</title>
    <link rel="stylesheet" href="~/css/index.css">
    <link rel="stylesheet" href="~/css/perfil.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" integrity="sha384-k6RqeWeci5ZR/Lv4MR0sA0FfDOMUSc9caGxOnKPz8wG8LIbk5/hd1JiQ+9H6p6zm" crossorigin="anonymous">
    <script src="https://kit.fontawesome.com/878301a14b.js" crossorigin="anonymous"></script>
</head>
<header>
        <div class="top-bar">
            <div class="logo">
                <img src="~/img/logo.png" alt="Huellitas Felices">
            </div>
            <div class="user-icons">
                @if (ViewBag.User != null)
                {
                    <a href="@Url.Action("Perfil", "Home")">Bienvenido @ViewBag.User.Nombre </a>
                    <a href="#"><i class="fa-solid fa-calendar-days" style="color: #2b2b2b;"></i></a>
                }
                else
                {
                    <a href='@Url.Action("Login", "Account")'><i class="fas fa-user"></i></a>
                }
            </div>
        </div>
    </header>
    
    <div class="contenido">
        <section class="perfil">
            <img src="~/img/pfp.png" alt="@ViewBag.User.Nombre @ViewBag.User.Apellido">
            <div class="info">
                <h2>@ViewBag.User.Nombre @ViewBag.User.Apellido</h2>
                <p>Cuidador y Paseador de Mascotas</p>
            </div>
            <div class="precios">
                <div>Precio de Cuidado <br> $4000 ARS</div>
                <div>Precio de Paseo <br> $2500 ARS</div>
            </div>
            <button class="contratar"><a href="contratar.html">Contratar a Bruno Godoy</a></button>
        </section>

        <h2 class="titulo">Galería de Fotos</h2>
        <section class="galeria">
            <img src="~/img/foto1.jpg" alt="Foto perro 1">
            <img src="~/img/foto2.jpg" alt="Foto perro 2">
            <img src="~/img/foto3.jpg" alt="Foto perro 3">
        </section>
        <section class="galeria">
            <img src="~/img/foto4.jpg" alt="Foto perro 4">
            <img src="~/img/foto5.jpg" alt="Foto perro 5">
            <img src="~/img/foto6.jpg" alt="Foto perro 6">
        </section>

        <section class="info-extra">
            <div class="ubicacion">
                <h3>Ubicación</h3>
                <img src="~/img/mapa.png" alt="Mapa de ubicación" height="250px">
            </div>

            <div class="horarios">
                <h3>Horarios disponibles para paseo</h3>
                <table>
                    <tr>
                        <th>Turno/Día</th><th>L</th><th>M</th><th>X</th><th>J</th><th>V</th>
                    </tr>
                    <tr><td>Mañana</td><td class="disponible"></td><td class="disponible"></td><td class="disponible"></td><td></td><td></td></tr>
                    <tr><td>Mediodía</td><td class="disponible"></td><td></td><td></td><td class="noDisponible"></td><td></td></tr>
                    <tr><td>Tarde</td><td></td class="disponible"><td class="disponible"></td><td class="noDisponible"></td><td></td><td></td></tr>
                    <tr><td>Noche</td><td></td><td class="noDisponible"></td><td class="disponible"></td class="noDisponible"><td class="noDisponible"></td><td></td></tr>
                </table>
            </div>
        </section>

        <h2 class="titulo">Calificaciones de Clientes</h2>
        <section class="testimonials ">
            <div class="testimonial">
                <div class="profile-pic"></div>
                <img src="~/img/asdfas.png" alt="user" class="user-img">
                <h4>Nombre de usuario</h4>
                <p>★★★★★</p>
                <p>"El comentario que hizo"</p>
            </div>
            <div class="testimonial">
                <div class="profile-pic"></div>
                <img src="~/img/asdfas.png" alt="user" class="user-img">
                <h4>Nombre de usuario</h4>
                <p>★★★★★</p>
                <p>"El comentario que hizo"</p>
            </div>
            <div class="testimonial">
                <div class="profile-pic"></div>
                <img src="~/img/asdfas.png" alt="user" class="user-img">
                <h4>Nombre de usuario</h4>
                <p>★★★★★</p>
                <p>"El comentario que hizo"</p>
            </div>
        </section>
        
    </div>
